---
const { src, ...props } = Astro.props
---

<div data-lightbox>
  <video class='rounded-md' autoplay loop muted playsinline {...props}>
    <source
      src=`https://content.mikepayne.me/videos/${src}.webm`
      type='video/webm codecs=av01.0.08M'
    />
    <source
      src=`https://content.mikepayne.me/videos/${src}.mp4`
      type='video/mp4'
    />
    Your browser does not support the video tag.
  </video>
</div>
