---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

const {
  as: Tag = 'a',
  class: className,
  href,
  heading,
  subheading,
  imagePath,
  altText,
  loading = 'lazy',
  mediaTransitionName
} = Astro.props

const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/images/*.{jpeg,jpg,png,gif}'
)

if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/images/*.{jpeg,jpg,png,gif}"`
  )
---

<Tag
  class:list={[
    className,
    'flex flex-col gap-y-1 rounded-2xl border border-border bg-primary-foreground bg-gradient-to-b from-secondary/50 shadow-sm',
    href && 'transition-all hover:border-foreground/25 hover:shadow'
  ]}
  href={href}
>
  <Image
    transition:name=`media-image-${mediaTransitionName}`
    src={images[imagePath]()}
    alt={altText}
    widths={[320, 720]}
    sizes='(max-width: 640px) 720px, (max-width: 768px) 320px, 320px'
    class='h-48 w-full rounded-2xl rounded-bl-none rounded-br-none object-cover'
    loading={loading}
  />
  <div class='flex flex-col gap-y-0.5 px-5 py-3'>
    <h1
      class='text-lg font-medium [text-shadow:_0_0_25px_hsl(var(--foreground)/25%)]'
    >
      {heading}
    </h1>
    <h2 class='text-muted-foreground'>{subheading}</h2>
  </div>

  <slot />
</Tag>
