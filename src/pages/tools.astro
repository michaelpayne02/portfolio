    iconPath: '/src/assets/icons/Illustrator.png',
    iconBgColour: '#000001'
  },
  {
    name: 'Photoshop',
    description: 'Raster Graphics',
    href: 'https://www.adobe.com/products/photoshop.html',
    iconPath: '/src/assets/icons/Photoshop.png',
    iconBgColour: '#000001'
  }
]

const VIDEO = [
  {
    name: 'Davinci Resolve',
    description: 'Video Editing',
    href: 'https://www.blackmagicdesign.com/products/davinciresolve',
    iconPath: '/src/assets/icons/DavinciResolve.png',
    iconBgColour: '#000001'
  },
  {
    name: 'After Effects',
    description: 'Motion Graphics',
    href: 'https://www.adobe.com/products/aftereffects.html',
    iconPath: '/src/assets/icons/AfterEffects.png',
    iconBgColour: '#000001'
  },
  {
    name: 'Blender',
    description: '3D Graphics',
    href: 'https://www.blender.org/',
    iconPath: '/src/assets/icons/Blender.png',
    iconBgColour: '#000001'
  }
]
const AUDIO = [
  {
    name: 'Ableton Live',
    description: 'Digital Audio Workstation',
    href: 'https://www.ableton.com/',
    iconPath: '/src/assets/icons/AbletonLive.png',
    iconBgColour: '#000001'
  },
  {
    name: 'FL Studio',
    description: 'Digital Audio Workstation',
    href: 'https://www.image-line.com/',
    iconPath: '/src/assets/icons/FLStudio.png',
    iconBgColour: '#000001'
  }
]
